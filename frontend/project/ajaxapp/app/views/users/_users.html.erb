<table>
<thead>
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "email" %></th>
  </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
    <td><%=user.name%></td>
    <td><%=user.email%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= will_paginate @users,:remote => true %>

