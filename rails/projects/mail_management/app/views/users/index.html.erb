<p id="notice"><%= notice %></p>
<center>
<h3>Upload excel file to send welcome email</h3>
 <%= form_tag import_from_excel_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import", :class=> "btn"%>
<% end %>
<br/>
<%= stylesheet_link_tag "style.css" %>
<table>
  <thead >
    <tr>
      <th>sno</th>
      <th>name</th>
      <th>email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.sno %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>

